<MudCard>
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">@Circle.Name</MudText>
        </CardHeaderContent>
        <CardHeaderActions>
            <MudIconButton Icon="@Icons.Material.Filled.Settings"></MudIconButton>
        </CardHeaderActions>
    </MudCardHeader>
    <MudCardContent>
        <MudText>
            @Circle.Description
        </MudText>
    </MudCardContent>
    <MudCardActions>
        <MudButton>Join</MudButton>
    </MudCardActions>
</MudCard>

@code {
    [Parameter]
    public Circle Circle { get; set; }
}
