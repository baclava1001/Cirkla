@page "/borrowitem/"
@inject IClient _client;
@inject NavigationManager _navigationManager;

<PageTitle>Details for @Item.Name</PageTitle>
<h3>Details for @Item.Name</h3>
<hr />

<div>
    @if(Item is null)
    {
        <p><em>Loading...</em></p>
    }
    else
    {
        <img src="@Item.Pictures?.FirstOrDefault()?.Url" alt="Picture of @Item.Name" class="img-fluid" style="width: 350px; height: auto;" />
        <br />
        <br />
        <dl class="row">
            <dt class="col-sm-2">Category</dt>
            <dd class="col-sm-10">@Item.Category</dd>
            <dt class="col-sm-2">Model</dt>
            <dd class="col-sm-10">@Item.Model</dd>
            <dt class="col-sm-2">Specifications</dt>
            <dd class="col-sm-10">@Item.Specifications</dd>
            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@Item.Description</dd>
            <dt class="col-sm-2">Owner</dt>
            <dd class="col-sm-10">@Item.Owner?.FirstName @Item.Owner?.LastName</dd>
        </dl>
        <EditForm method="post" Model="ContractDTO" OnValidSubmit="AskToBorrow" FormName="choosedates">
            <div class="mb-3">
                <label for="requestedpickupdate" class="form-label">Requested pickup date</label>
                <InputDate TValue="DateTime" id="requestedpickupdate" @bind-Value="@ContractDTO.StartTime" class="form-control" />
                <ValidationMessage For="() => ContractDTO.StartTime" class="text-danger" />
            </div>
            <div class="mb-3">
                <label for="requestedreturndate" class="form-label">Requested return date</label>
                <InputDate TValue="DateTime" id="requestedreturndate" @bind-Value="@ContractDTO.EndTime" class="form-control" />
                <ValidationMessage For="() => ContractDTO.EndTime" class="text-danger" />
            </div>
            <button class="btn btn-primary me-2" type="button" @onclick="(() => AskToBorrow())">Cirkla!</button>
        </EditForm>
    }
    @if(!string.IsNullOrEmpty(tempMessage))
    {
        <p class="@messageClass mt-3">@tempMessage</p>
    }
</div>


@code {
    // TODO: Add logic for datepickers
    // TODO: Add more pictures in this view
    [SupplyParameterFromQuery]
    public int Id { get; set; } //Item id from http-query

    [Parameter]
    public Item? Item { get; set; } = new();

    [Parameter]
    public ContractCreateDTO ContractDTO { get; set; } = new();

    string? tempMessage;
    string? messageClass;

    protected override async Task OnInitializedAsync()
    {
        Item = await _client.ApiItemGetAsync(Id);
        ContractDTO.StartTime = DateTime.Now;
        ContractDTO.EndTime = DateTime.Now;
    }

    public async Task AskToBorrow()
    {
        ContractDTO.ItemId = Item.Id;
        ContractDTO.BorrowerId = "54b5627b-1f8e-4634-8bb0-206fecc840f3"; // TODO: get Id from JWT or session
        ContractDTO.OwnerId = Item.OwnerId;
        ContractDTO.Created = DateTime.Now;

        try
        {
            var response = await _client.ApiBorrowingPostAsync(ContractDTO);
            _navigationManager.NavigateTo($"/request/view?id={response.Id}");
        }
        catch (ApiException ex)
        {
            if(ex.StatusCode >= 200 && ex.StatusCode <= 299)
            {
                messageClass = "text-success";
                tempMessage = $"Your request to borrow {Item.Name} has been succesfully sent to {Item.Owner.FirstName} {Item.Owner.LastName}";
            }
            else if(ex.StatusCode >= 400 && ex.StatusCode <= 499)
            {
                messageClass = "text-danger";
                tempMessage = ex.Message.ToString();
            }
            else
            {
                messageClass = "text-danger";
                tempMessage = ex.Message.ToString();
            }
        }
    }
}

