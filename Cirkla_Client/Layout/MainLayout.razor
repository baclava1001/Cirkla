@using Cirkla_Client.Pages.Components
@inherits LayoutComponentBase
@* Required for MudBlazor *@
<MudThemeProvider />
<MudPopoverProvider />
@* Needed for dialogs *@
<MudDialogProvider />
@* Needed for snackbars *@
<MudSnackbarProvider />


<div class="page d-flex flex-column min-vh-100">
    <NavMenu/>
    <ToastNotification />

    <main class="flex-fill">
        <article class="content px-4">
            @Body
        </article>
    </main>

    <footer class="footer mt-auto py-3">
        <div class="container">
            <span class="text-muted"><a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a></span>
        </div>
    </footer>
</div>